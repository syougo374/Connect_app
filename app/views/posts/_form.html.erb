<%= form_with(model: @post, local: true) do |f| %>
  <dl>
    <dt><%= f.label :title %></dt>
    <dd><%= f.text_field :title %></dd>
    <br>
    <dt><%= f.label :content %></dt>
    <dd><%= f.text_field :content %></dd>
    <br>
    <dt><%= f.label :address %></dt>
    <dd><%= f.text_field :address %></dd>
    <br>
    <dt><%= f.label :image %></dt>
    <dd><%= f.file_field :image,autocomplete: "name" %></dd>
    <%= f.hidden_field :image_cache %>
    </dl>
  <% end %>