<div class ="header">
  <%= link_to tops_index_path ,class:"navbar-brand" do %>
    <%= image_tag '/images/logo.jpg', id:'logo' %>
  <% end %>
  <ul class = "top_menu_bar">
    <% if user_signed_in? %>
      <b><li class = "item_bar btn-outline-warning"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li></b>
    <% else %>
      <b><li class = "item_bar btn-outline-warning" id = "sign_up"><%= link_to "新規登録", new_user_registration_path %></li></b>
      <b><li class = "item_bar btn-outline-warning" id = "log_in"><%= link_to "ログイン", new_user_session_path %></li></b>
    <% end %>
    <% if current_user.try(:admin?) %>
      <b><li class = "item_bar btn-outline-warning"><%= link_to '管理者画面', rails_admin_path %></li></b>
    <% end %>
  <ul>
</div>
