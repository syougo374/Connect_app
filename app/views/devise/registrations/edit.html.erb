<%# <div class= "content_index">
<div class= "content_inner"> %>
<div class ="box">
  <div class ="box-inner">
    <%# <div class ="session-inner"> %>

      <h2><%= t('.title', resource: resource.model_name.human) %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="box-name">

          <%= f.label :ニックネーム %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder:'ニックネーム記入' %>
        </div>

        <div class="box-icon field">
          <%= f.label :アイコン %><br />
          <%= f.file_field :image, autofocus: true, autocomplete: "imgae" %>
          <%= f.hidden_field :image_cache %>
        </div>

        <div class="box-email">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:'Myメールアドレス' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
        <% end %>

      <div class="box-password">
          <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" ,placeholder:"新たなパスワード"%>
          <% if @minimum_password_length %>
            <br />
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %>
        </div>

      <div class="box-password">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:'新パスワードをもう一度' %>
        </div>

      <div class="box-password">
          <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password",placeholder:'現在のパスワードを記入' %>
        </div>

        <div class="actions ">
          <%= f.submit t('.update') %>
        </div>
      <% end %>
      <%= link_to 'ホームへ', posts_path,class:"btn btn-outline-success btn-block" %>
    </div>
  </div>
</div>