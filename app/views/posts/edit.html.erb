<div class = "new_post">
  <%= render'application/sidebar' %>
    <% if @post.errors.any? %>
      <div>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class = "new_posts">
    <h1 class = 'new_post_h1'>投稿編集画面</h1>
    <%= render 'form' %>
  </div>
</div>